@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var home = @CurrentPage.Site();
    string sectionName = "";
    int cpaos = CurrentPage.AncestorOrSelf(2).Id;
}

@switch (cpaos)
{
    case 1236:
        sectionName = "bracknell";
        break;
    case 1238:
        sectionName = "reading";
        break;
    case 1240:
        sectionName = "slough";
        break;
    case 1242:
        sectionName = "west-berkshire";
        break;
    case 1244:
        sectionName = "windsor-maidenhead";
        break;
    case 1246:
        sectionName = "wokingham";
        break;
    default:
        sectionName = "";
        break;
}

