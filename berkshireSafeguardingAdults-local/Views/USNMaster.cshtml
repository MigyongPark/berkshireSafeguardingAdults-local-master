@RenderSection("BodyTag", false)
<!-- SITE -->
<div id="site" class="@sectionName">

    <!-- HEADER -->
    <header>
        <div class="container">
            <h1>Berkshire Safeguarding Adults</h1>
            <!-- LOGO -->
            @Html.Partial("USNWebsiteHeadSection/USN_WebsiteLogo", @Model)
